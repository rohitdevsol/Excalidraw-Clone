{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_API_URL"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:web": {
      "dependsOn": [
        "build"
      ]
    },
    "build:api": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "build:ws": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}