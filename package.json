{
  "name": "draw-app",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter http-backend dev",
    "dev:ws": "pnpm --filter ws-server dev",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter http-backend build",
    "build:ws": "pnpm --filter ws-server build",
    "db:generate": "pnpm --filter db run generate",
    "db:migrate": "pnpm --filter db run migrate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1"
  }
}